{
    "name": "saulmoralespa/siigo-api-php",
    "description": "Siigo API PHP SDK",
    "keywords": ["api", "siigo", "php"],
    "homepage": "https://github.com/saulmoralespa/siigo-api-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Saul Morales Pacheco",
            "email": "info@saulmoralespa.com",
            "homepage": "https://saulmoralespa.com",
            "role": "Developer"
        }
    ],
    "type": "library",
    "require": {
		"php": ">=8.1",
        "guzzlehttp/guzzle": "^7.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "vlucas/phpdotenv": "^5.6",
        "squizlabs/php_codesniffer": "3.*"
    },
    "autoload": {
        "psr-4": {
            "Saulmoralespa\\Siigo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Saulmoralespa\\Siigo\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpcs-check": "phpcs --colors -s",
        "phpcs-fix": "phpcbf --colors -s",
        "phpcs-auto-check-summary": "phpcs --report=summary -p",
        "phpcs-auto-fix-summary": "phpcbf --report=summary -p"
    }
}
